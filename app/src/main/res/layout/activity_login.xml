<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip">

            <!-- View Title Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="@string/lbl_login"
                android:textSize="25sp"
                android:textStyle="bold" />
            <!-- Email Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_username" />
            <!-- Email TextField -->

            <EditText
                android:id="@+id/loginUserName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <!-- Password Label -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="@string/lbl_password" />
            <!-- Password TextField -->

            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

            <!-- Error message -->

            <TextView
                android:id="@+id/login_error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:textColor="#e30000"
                android:textStyle="bold" />

            <!-- Login Button -->
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dip"
            android:text="@string/lbl_login_button" />
    </RelativeLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_meetings"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:columnCount="12">

        <View
            android:layout_width="5dp"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:layout_marginLeft="-10.5dp"
            android:background="@drawable/cell_rectangle" />

        <!-- ETA -->
        <TextView
            style="@style/TableLabel_Meetings"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/str_meeting_eta" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="top"
            android:background="@drawable/cell_round" />

        <TextView
            android:id="@+id/value_meeting_eta"
            style="@style/TableValue_Meetings"
            android:layout_column="3"
            android:layout_row="0"
            android:text="adsfffffffffffffffffffffffffffdmmmmmmfffffsaas"/>

        <!-- Destination -->
        <TextView
            style="@style/TableLabel_Meetings"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/str_meeting_destination" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="top"
            android:background="@drawable/cell_round" />

        <TextView
            android:id="@+id/value_meeting_destination"
            style="@style/TableValue_Meetings"
            android:layout_column="3"
            android:layout_row="1" />

        <!-- Details -->

        <TextView
            style="@style/TableLabel_Meetings"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/str_meeting_details" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="top"
            android:background="@drawable/cell_round" />

        <TextView
            android:id="@+id/value_meeting_details"
            style="@style/TableValue_Meetings"
            android:layout_column="3"
            android:layout_row="2" />

        <!-- Info -->

        <TextView
            style="@style/TableLabel_Meetings"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/str_meeting_info" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="top"
            android:background="@drawable/cell_round" />

        <TextView
            android:id="@+id/value_meeting_info"
            style="@style/TableValue_Meetings"
            android:layout_column="3"
            android:layout_row="3" />

        <!-- Notes -->

        <TextView
            style="@style/TableLabel_Meetings"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/str_meeting_notes" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_gravity="top"
            android:background="@drawable/cell_round" />

        <TextView
            android:id="@+id/value_meeting_notes"
            style="@style/TableValue_Meetings"
            android:layout_column="3"
            android:layout_row="4" />



    </GridLayout>
</RelativeLayout>
