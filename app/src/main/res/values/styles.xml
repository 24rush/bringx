<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TableRow_Meetings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="TableLabel_Meetings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">0.22</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="TableValue_Meetings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:layout_weight">0.78</item>
        <item name="android:maxLines">4</item>
        <item name="android:minLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="Table_CellRound">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@drawable/cell_round</item>
    </style>

</resources>
